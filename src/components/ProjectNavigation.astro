---
import type { Page } from "@/types";

const page: Page = Astro.props.page;
---

<div class="spacingTop relative">
  <div
    class="text-mobile-bu md:text-bu mb-6 md:absolute md:top-1/2 md:-translate-y-1/2"
  >
    Ende
  </div>
  <div class="flex justify-center gap-x-4">
    {
      page.content.prev && (
        <a href={page.content.prev} class="item">
          <div class="text-mobile-copy md:text-copy text-center">
            Projekt
            <br />
            davor
          </div>
        </a>
      )
    }
    {
      page.content.next && (
        <a href={page.content.next} class="item">
          <div class="text-mobile-copy md:text-copy text-center">
            n√§chstes
            <br />
