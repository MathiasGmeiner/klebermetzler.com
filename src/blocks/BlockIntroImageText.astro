---
import { Image } from "astro:assets";

const block = Astro.props;
const content = block.content;
const HeadlineLevel = content.headlinelevel || "h2";

const sizes = "(min-width: 600px) calc(50vw - 7.5rem), calc(100vw - 2.5rem)";

interface Item {
  image: {
    src: string;
    alt: string;
    width: number;
    height: number;
  };
  headline: string;
  text: string;
}
---

<div>
  {
    content.headline && (
      <HeadlineLevel
        class="fd-head mb-6 md:mb-16 lg:mb-20 xl:mb-24"
        set:html={content.headline}
      />
    )
  }
  <div class="fd-subtitle" set:html={content.text} />
  <div class="list">
    {
      content.items?.map((item: Item) => (
        <div class="item">
          <Image
            src={item.image.src}
            alt={item.image.alt}
            width={item.image.width}
            height={item.image.height}
            widths={[320, 400, 640, 800, 1000, 1200, 1400]}
            sizes={sizes}
          />
          <div>
            <h3 class="fd-sublight" set:html={item.headline} />
            <div class="fd-kirbytext" set:html={item.text} />
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  .list {
    display: flex;
    flex-direction: column;
    row-gap: 3rem;
    margin-top: 1.5rem;

    @screen md {
      row-gap: var(--spacing);
      margin-top: 4rem;
    }

    @screen lg {
      column-gap: 2rem;
      margin-top: 5rem;
    }

    @screen xl {
      column-gap: 6rem;
    }
  }

  .item {
    display: flex;
    flex-direction: column;
    row-gap: 1.5rem;

    @screen md {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      column-gap: 2rem;
    }

    @screen lg {
      column-gap: 2.5rem;
    }

    img {
      border: 2px solid var(--color-black);

      @screen lg {
        border-width: 4px;
      }
    }

    h3 {
      margin-bottom: 1.5rem;

      @screen md {
        margin-bottom: 2.5rem;
      }

      @screen lg {
        margin-bottom: 3rem;
      }
    }
  }
</style>
