---
import CustomPicture from "@components/CustomPicture.astro";

const block = Astro.props;
const isFirstLayout = Astro.props;
const content = block.content;
const HeadlineLevel = content.headlinelevel || "h2";

interface Item {
  image: {
    src: string;
    alt: string;
    width: number;
    height: number;
  };
  headline: string;
  text: string;
}
---

<div>
  {
    content.headline && (
      <HeadlineLevel
        class="fd-headbold mb-6 md:mb-16 lg:mb-20 xl:mb-24"
        set:html={content.headline}
      />
    )
  }
  <div class="fd-subtitle" set:html={content.text} />
  <div class="list">
    {
      content.items?.map((item: Item) => {
        const ratio = item.image ? item.image.width / item.image.height : 1;
        let sources = [];
        let breakpoints = {
          "2200px": 1350,
          "1200px": 800,
          "900px": 600,
          "600px": 340,
          "320px": 600,
          "0px": 320,
        };
        sources = Object.entries(breakpoints).map(([breakpoint, width]) => ({
          breakpoint,
          image: item.image,
          ratio: ratio,
          width,
          lazy: !isFirstLayout,
        }));
        return (
          <div class="item">
            <div>
              <div class="image">
                <CustomPicture
                  sources={sources}
                  fallback={{ src: item.image.src, width: 1200, ratio: ratio }}
                  alt={item.image.alt}
                />
              </div>
            </div>
            <div>
              <h3 class="fd-sublight" set:html={item.headline} />
              <div class="fd-kirbytext" set:html={item.text} />
            </div>
          </div>
        );
      })
    }
  </div>
</div>

<style>
  .list {
    display: flex;
    flex-direction: column;
    row-gap: 3rem;
    margin-top: 1.5rem;

    @screen md {
      row-gap: var(--spacing);
      margin-top: 4rem;
    }

    @screen lg {
      column-gap: 2rem;
      margin-top: 5rem;
    }

    @screen xl {
      column-gap: 6rem;
    }
  }

  .item {
    display: flex;
    flex-direction: column;
    row-gap: 1.5rem;

    @screen md {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      column-gap: 2rem;
    }

    @screen lg {
      column-gap: 2.5rem;
    }

    img {
      border: 2px solid var(--color-black);

      @screen lg {
        border-width: 4px;
      }
    }

    h3 {
      margin-bottom: 1.5rem;

      @screen md {
        margin-bottom: 2.5rem;
      }

      @screen lg {
        margin-bottom: 3rem;
      }
    }
  }
</style>
